{
  "compilerOptions": {
    "lib": ["es2022"],
    "target": "es2022",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "paths": {
      "@gnome-shell/*": ["./src/gnome-shell-types/*"],
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["./dist", "./node_modules"],
  "include": ["./src/**/*.ts"]
}